<div>
  <%= link_to "Edit this product", edit_product_path(@product) %> |
  <%= link_to "Back to products", products_path %>
  <%= button_to "Destroy this product", @product, method: :delete %>
</div>


<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <% if @product.presentation.attached? %>
        <%= image_tag @product.presentation ,class: 'img-fluid rounded-start' %>
      <% else %>
        <svg class="bd-placeholder-img card-img-top" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false">
          <title>Placeholder</title>
          <rect width="100%" height="100%" fill="#868e96"></rect>
          <text x="35%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
        </svg>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h1 class="card-title"><%= @product.title %></h1>
        <div class="card-text" style="padding: 5px 0 5px 0;"><%= @product.body %></div>
        <div class="card-text">
          <div class="container text-center">
            <div class="row">
              <div class="col">
                <span class="badge text-bg-success" style="font-size:20px; margin: 5px">Price: <%= @product.price %></span>
              </div>
              <div class="col">
                <form>
                  <div class="mb-1">
                    <input type="number" class="form-control" value="1" min="1" max id="Quantity" required>
                  </div>
                  <div class="mb-1">
                    <button type="submit" class="btn btn-primary">Buy</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

