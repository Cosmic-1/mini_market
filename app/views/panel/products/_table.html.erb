<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Available</th>
      <th scope="col">Description</th>
      <th scope="col">Control</th>
    </tr>
  </thead>
  <tbody>
    <% products.each do |product| %>
      <tr>
        <th scope="row"><%= product.id %></th>
        <td><%= link_to product.title, panel_product_path(product) %></td>
        <td><%= number_to_currency_uah(product.price) %></td>
        <td><%= product.available? ? 'yes' : 'no' %></td>
        <td><%= product.description %></td>
        <td>
          <div class="container text-center">
            <div class="row">
              <div class="col">
                <%= link_to 'Edit', edit_panel_product_path(product), class: 'btn btn-primary' %>
              </div>
              <div class="col">
                <%= button_to 'Delete', panel_product_path(product), method: :delete, class: 'btn btn-danger' %>
              </div>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
