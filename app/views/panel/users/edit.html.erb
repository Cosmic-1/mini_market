<div class="container text-center" style="margin: 10px 0 10px 0">
  <div class="row">
    <div class="col">
      <% if can? :read, User %>
        <%= link_to t('.link.show'), panel_user_path(@user), class:'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col">
      <% if can? :edit, User %>
        <%= link_to t('.link.back'), panel_users_path, class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
<h1><%= t('.title') %></h1>
<%= render "form", user: @user, url: panel_user_path(@user) %>
